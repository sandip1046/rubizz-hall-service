{
  "name": "rubizz-hall-service",
  "version": "1.0.0",
  "description": "Hall Management Service for Rubizz Hotel Inn - Event hall bookings, cost calculator, and resource management",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "hall-management",
    "event-booking",
    "cost-calculator",
    "microservice",
    "rubizz-hotel",
    "typescript",
    "express"
  ],
  "author": "Rubizz Hotel Inn Development Team",
  "license": "MIT",
  "dependencies": {
    "@sandip1046/rubizz-shared-libs": "^1.0.0",
