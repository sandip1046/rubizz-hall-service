# Hall Management Service Environment Configuration

# Server Configuration
PORT=3007
NODE_ENV=development
SERVICE_NAME=rubizz-hall-service
SERVICE_VERSION=1.0.0

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/rubizz_hall_db?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rubizz_hall_db
DB_USER=username
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRES_IN=7d

# API Gateway Configuration
API_GATEWAY_URL=http://localhost:3000
API_GATEWAY_SECRET=your-api-gateway-secret

# External Services
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
CUSTOMER_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3010

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@rubizzhotel.com
FROM_NAME=Rubizz Hotel Inn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/hall-service.log

# Business Configuration
DEFAULT_CURRENCY=INR
DEFAULT_TIMEZONE=Asia/Kolkata
BOOKING_ADVANCE_DAYS=30
CANCELLATION_HOURS=24
DEPOSIT_PERCENTAGE=20

# Cost Calculator Configuration
BASE_HALL_RATE=5000
CHAIR_RATE=50
DECORATION_RATE=2000
LIGHTING_RATE=1000
AV_RATE=3000
CATERING_RATE_PER_PERSON=300
SECURITY_RATE=1000
GENERATOR_RATE=2000
TAX_PERCENTAGE=18

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=uploads/hall

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
TRACING_ENABLED=true
